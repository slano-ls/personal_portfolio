extends ../base.pug 

block variables
  - var template = "contact"

block content 
  main.contact
    .contact__wrapper 

      section.contact__heading
        .contact__heading__wrapper 
          h1.contact__heading__text(data-bigTitle)
            span.contact__heading__serif(data-alt="Say") Say
            span.contact__heading__sans(data-alt="Hi") Hi

      section.contact__body 
        address.contact__credits 
          ul.contact__credits__wrapper 
            li.contact__credit 
              p.contact__credit__task Inspired By:
              a.contact__credit__link(href="https://huyml.co" target="_blank" rel="noopener noreferrer") Huy Phan

            li.contact__credit 
              p.contact__credit__task Designed By:
              a.contact__credit__link(href="https://twitter.com/goody__boy" target="_blank" rel="noopener noreferrer") Goodness

            li.contact__credit 
              p.contact__credit__task Type:
              a.contact__credit__link(href="https://fontshare.com/fonts/clash-display" target="_blank" rel="noopener noreferrer") C. Display,
              a.contact__credit__link(href="https://cdnfonts.com/manuscribe-free.font" target="_blank" rel="noopener noreferrer") ManuScribe F.

            li.contact__credit 
              p.contact__credit__task Models:
              a.contact__credit__link(href="https://twitter.com/goody__boy" target="_blank" rel="noopener noreferrer") Goodness, again

        .contact__details 
          ul.contact__details__wrapper 
            li.contact__detail 
              p.contact__detail__type Twitter
              a.contact__detail__link(href="https://twitter.com/goody__boy" target="_blank" rel="noopener noreferrer") @goody__boy

            li.contact__detail 
              p.contact__detail__type Github
              a.contact__detail__link(href="https://github.com/goodyboy301" target="_blank" rel="noopener noreferrer") /goodyboy301

            li.contact__detail 
              p.contact__detail__type Read Cv
              a.contact__detail__link(href="https://read.cv/goody" target="_blank" rel="noopener noreferrer") /goody


            li.contact__detail 
              p.contact__detail__type Gmail
              a.contact__detail__link(href="mailto:goodyboy.work@gmail.com") goodyboy.work

        section.contact__canvas     
          .contact__canvas__wrapper    
            figure.contact__canvas__illustration
